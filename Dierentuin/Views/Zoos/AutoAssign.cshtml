@model Dierentuin.Models.Zoo

@{
    ViewData["Title"] = "Auto Assign - " + Model.Name;
}

<div class="glassmorphism-card p-4 mb-4">
    <h1 class="text-gradient-teal mb-4">ðŸ¤– Auto Assign Animals</h1>
    <h4 class="text-light mb-3">Zoo: @Model.Name</h4>
    
    <div class="alert alert-info glassmorphism-card mb-4">
        <h5>Auto Assign Options:</h5>
        <ul>
            <li><strong>Finish Existing:</strong> Keeps current assignments and fills remaining enclosures with unassigned animals.</li>
            <li><strong>Clear and Recreate:</strong> Removes all current assignments and creates new enclosures for all animals.</li>
        </ul>
    </div>
    
    <form asp-action="AutoAssign" method="post" class="mb-4">
        <input type="hidden" asp-for="Id" />
        
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" name="clearExisting" id="clearExisting" value="true">
            <label class="form-check-label text-light" for="clearExisting">
                Clear existing assignments and recreate enclosures
            </label>
        </div>
        
        <div class="mt-4">
            <button type="submit" class="btn btn-gradient btn-lg me-2">ðŸš€ Auto Assign</button>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
