@model DIERENTUIN13.Models.Zoo

@{
    // Set the page title dynamically
    ViewData["Title"] = "Delete Zoo";
}

<h1>Delete Zoo</h1>

<!-- Confirmation message -->
<h3>Are you sure you want to delete this zoo?</h3>

<!-- Display Zoo details -->
<div>
    <h4>Zoo Details</h4>
    <hr />
    <dl class="row">
        <!-- Display Zoo Name -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <!-- Display Zoo ID -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
    </dl>
</div>

<!-- Display associated Enclosures -->
@if (Model.Enclosures != null && Model.Enclosures.Any())
{
    <div>
        <h4>Enclosures in this Zoo</h4>
        <ul>
            @foreach (var enclosure in Model.Enclosures)
            {
                <li>@enclosure.Id - @enclosure.Name</li>
            }
        </ul>
    </div>
}

<!-- Display Animals in associated Enclosures -->
@if (Model.Enclosures != null && Model.Enclosures.Any(e => e.Animals.Any()))
{
    <div>
        <h4>Animals in this Zoo</h4>
        <ul>
            @foreach (var enclosure in Model.Enclosures)
            {
                @foreach (var animal in enclosure.Animals)
                {
                    <li>@animal.Id - @animal.Name</li>
                }
            }
        </ul>
    </div>
}

<!-- Form for deleting the Zoo -->
<form asp-action="Delete">
    <!-- Hidden input for Zoo ID -->
    <input type="hidden" asp-for="Id" />

    <!-- Submit button for confirming deletion -->
    <input type="submit" value="Delete" class="btn btn-danger" />

    <!-- Link to cancel deletion and return to the Zoo list -->
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
