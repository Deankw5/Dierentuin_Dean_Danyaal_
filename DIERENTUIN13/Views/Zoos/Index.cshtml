@model IEnumerable<DIERENTUIN13.Models.Zoo>

@{
    // Set the page title dynamically
    ViewData["Title"] = "Zoos";
}

<h1>Zoos</h1>

<!-- Search form for filtering Zoos by name -->
<form asp-action="Index" method="get">
    <p>
        <!-- Input field for the search string -->
        Find by name:
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
        <input type="submit" value="Search" class="btn btn-primary" />
    </p>
</form>

<!-- Button to navigate to the Create Zoo page -->
<p>
    <a asp-action="Create" class="btn btn-success">Create New Zoo</a>
</p>

<!-- Table displaying the list of Zoos -->
<table class="table">
    <thead>
        <tr>
            <th>
                <!-- Dynamically display the column name -->
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <!-- Display the Zoo's name -->
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <!-- Action links for Edit, Details, and Delete -->
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
