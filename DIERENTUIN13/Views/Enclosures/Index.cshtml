@model IEnumerable<DIERENTUIN13.Models.Enclosure>

@{
    ViewData["Title"] = "Enclosures";
}

<h1>Enclosures</h1>

<!-- Search form -->
<form asp-action="Index" method="get">
    <p>
        Filter: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
        <input type="submit" value="Search" class="btn btn-primary" />
    </p>
</form>

<!-- Link to create a new enclosure -->
<p>
    <a asp-action="Create" class="btn btn-success">Create New Enclosure</a>
</p>

<!-- Table to display enclosures -->
<table class="table">
    <thead>
        <tr>
            <th>
                Zoo Name
            </th>
            <th>
                Enclosure Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Climate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HabitatType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecurityLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Zoo.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Climate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HabitatType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SecurityLevel)
                </td>
                <td>
                    @item.Size m²
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

