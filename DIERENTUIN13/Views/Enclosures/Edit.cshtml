@model DIERENTUIN13.Models.Enclosure

@{
    ViewData["Title"] = "Edit Enclosure";
}

<h1>Edit Enclosure</h1>

<h4>Enclosure</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <!-- Validation summary for model errors -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <!-- Name input field -->
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Climate dropdown -->
            <div class="form-group">
                <label asp-for="Climate" class="control-label"></label>
                <select asp-for="Climate" class="form-control" asp-items="ViewBag.ClimateTypes"></select>
                <span asp-validation-for="Climate" class="text-danger"></span>
            </div>

            <!-- HabitatType dropdown -->
            <div class="form-group">
                <label asp-for="HabitatType" class="control-label"></label>
                <select asp-for="HabitatType" class="form-control" asp-items="ViewBag.HabitatTypes"></select>
                <span asp-validation-for="HabitatType" class="text-danger"></span>
            </div>

            <!-- SecurityLevel dropdown -->
            <div class="form-group">
                <label asp-for="SecurityLevel" class="control-label"></label>
                <select asp-for="SecurityLevel" class="form-control" asp-items="ViewBag.SecurityLevels"></select>
                <span asp-validation-for="SecurityLevel" class="text-danger"></span>
            </div>

            <!-- Size input field with unit -->
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="Size" class="form-control" type="number" step="any" />
                    <div class="input-group-append">
                        <span class="input-group-text">m²</span>
                    </div>
                </div>
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>

            <!-- Zoo dropdown -->
            <div class="form-group">
                <label asp-for="ZooId" class="control-label">Zoo</label>
                <select asp-for="ZooId" class="form-control" asp-items="ViewBag.ZooId"></select>
                <span asp-validation-for="ZooId" class="text-danger"></span>
            </div>

            <!-- Submit button -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<!-- Back to List link -->
<div>
    <a asp-action="Index">Back to List</a>
</div>

<!-- Validation scripts -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

