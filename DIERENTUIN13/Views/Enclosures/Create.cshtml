@model DIERENTUIN13.Models.Enclosure

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Enclosure</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Name -->
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Climate -->
            <div class="form-group">
                <label asp-for="Climate" class="control-label"></label>
                <select asp-for="Climate" class="form-control">
                    @foreach (var climate in (SelectList)ViewData["ClimateTypes"])
                    {
                        <option value="@climate.Value">@climate.Text</option>
                    }
                </select>
                <span asp-validation-for="Climate" class="text-danger"></span>
            </div>

            <!-- HabitatType -->
            <div class="form-group">
                <label asp-for="HabitatType" class="control-label"></label>
                <select asp-for="HabitatType" class="form-control">
                    @foreach (var habitat in (SelectList)ViewData["HabitatTypes"])
                    {
                        <option value="@habitat.Value">@habitat.Text</option>
                    }
                </select>
                <span asp-validation-for="HabitatType" class="text-danger"></span>
            </div>

            <!-- SecurityLevel -->
            <div class="form-group">
                <label asp-for="SecurityLevel" class="control-label"></label>
                <select asp-for="SecurityLevel" class="form-control">
                    @foreach (var security in (SelectList)ViewData["SecurityLevels"])
                    {
                        <option value="@security.Value">@security.Text</option>
                    }
                </select>
                <span asp-validation-for="SecurityLevel" class="text-danger"></span>
            </div>

            <!-- Size -->
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <select asp-for="Size" class="form-control">
                    @foreach (var size in (SelectList)ViewData["Sizes"])
                    {
                        <option value="@size.Value">@size.Text</option>
                    }
                </select>
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>

            <!-- Animals (multiple select) -->
            

            <!-- Submit button -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
