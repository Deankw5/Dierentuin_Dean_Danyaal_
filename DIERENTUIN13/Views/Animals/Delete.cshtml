    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Animal</h4>
    <hr />
    <dl class="row">
        <!-- Display animal name -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <!-- Display animal species -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Species)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Species)
        </dd>
        <!-- Display animal category -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <!-- Display animal size -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
        <!-- Display animal dietary class -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DietaryClass)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DietaryClass)
        </dd>
        <!-- Display animal activity pattern -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActivityPattern)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActivityPattern)
        </dd>
        <!-- Display animal enclosure -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enclosure)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enclosure.Name)
        </dd>
        <!-- Display animal space requirement -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SpaceRequirement)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SpaceRequirement) m²
        </dd>
        <!-- Display animal security requirement -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SecurityRequirement)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SecurityRequirement)
        </dd>
