@model DIERENTUIN13.Models.Animal

@{
    ViewData["Title"] = "Animal Details";
}

<h1>Animal Details</h1>

<div>
    <h4>Animal</h4>
    <hr />
    <dl class="row">
        <!-- Display animal ID -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <!-- Display animal name -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <!-- Display animal species -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Species)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Species)
        </dd>
        <!-- Display animal category -->
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name) (ID: @Model.CategoryId)
        </dd>
        <!-- Display animal size -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
        <!-- Display animal dietary class -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DietaryClass)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DietaryClass)
        </dd>
        <!-- Display animal activity pattern -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActivityPattern)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActivityPattern)
        </dd>
        <!-- Display animal prey -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prey)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prey)
        </dd>
        <!-- Display animal enclosure -->
        <dt class="col-sm-2">
            Enclosure
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enclosure.Name) (ID: @Model.EnclosureId)
        </dd>
        <!-- Display animal space requirement -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SpaceRequirement)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SpaceRequirement) m²
        </dd>
        <!-- Display animal security requirement -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SecurityRequirement)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SecurityRequirement)
        </dd>
    </dl>
</div>
<!-- Links to edit the animal and go back to the list -->
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>




